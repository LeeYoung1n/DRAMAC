<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">		<!-- 복붙한 부분 -->
        
<mapper namespace="com.dramac.mapper.PhotoAttachMapper">

	<!-- 파일경로, 파일명, uuid, image 여부를 attach 테이블에 insert -->
	<insert id="insert">
		insert into drama_photo(uuid, uploadPath, fileName, image, bno)
		values(#{uuid}, #{uploadPath}, #{fileName}, #{image}, #{bno})
	</insert>
	
	<select id="attachlist" resultType="com.dramac.model.PhotoAttachVO">
		select * from drama_photo where bno=#{bno}
	</select>

</mapper>